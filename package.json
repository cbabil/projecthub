{
  "name": "projecthub",
  "version": "1.0.0",
  "description": "ProjectHub Electron app",
  "author": "cbabil",
  "packageManager": "yarn@1.22.22",
  "main": "dist/main/index.cjs",
  "type": "module",
  "scripts": {
    "dev": "electron-vite dev",
    "dev:electron": "electron-vite dev -w",
    "build": "electron-vite build",
    "pack": "electron-builder --publish=never",
    "preview": "electron-vite preview",
    "start": "electron-vite preview",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "typecheck": "tsc --project tsconfig.tests.json --noEmit",
    "format": "prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "build": {
    "appId": "com.projecthub.app",
    "productName": "ProjectHub",
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "asar": true,
    "directories": {
      "output": "release"
    },
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "dependencies": {
    "@electron-toolkit/utils": "^2.0.0",
    "adm-zip": "0.5.10",
    "lucide-react": "^0.425.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "yaml": "2.4.5"
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "@testing-library/dom": "10.4.1",
    "@testing-library/jest-dom": "6.9.1",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "14.6.1",
    "@types/jsdom": "27.0.0",
    "@types/node": "^22.7.4",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "^7.17.0",
    "@vitejs/plugin-react": "^4.3.2",
    "@vitest/coverage-v8": "4.0.13",
    "autoprefixer": "^10.4.20",
    "electron-builder": "^24.13.3",
    "electron-vite": "^2.3.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^5.1.0-next-91b6e5df0-20230705",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "jsdom": "27.2.0",
    "postcss": "^8.4.41",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.10",
    "typescript": "^5.4.5",
    "vite": "^5.4.8",
    "vitest": "4.0.13"
  }
}
